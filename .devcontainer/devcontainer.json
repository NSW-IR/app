{
  "name": "Databricks-Python-Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        // ターミナルのデフォルトシェルを bash に
        "terminal.integrated.defaultProfile.linux": "bash",

        // Python 仮想環境をデフォルトに設定
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python",

        // Lint / Format設定（任意）
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "databricks.databricks-vscode",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },
  // venv を前提にパッケージをインストール
  "postCreateCommand": ". /workspace/.venv/bin/activate && pip install -r requirements.txt && npm install -g @anthropic-ai/claude-code || true",
  "remoteUser": "root"
}